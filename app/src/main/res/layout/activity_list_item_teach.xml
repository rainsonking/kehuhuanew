<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_list_item_background"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="19dp"
    android:paddingEnd="15dp">


    <!--<CheckBox-->
    <!--android:id="@+id/checkbox_operate_data"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_margin="6dp"-->
    <!--android:focusableInTouchMode="false"-->
    <!--android:clickable="false"-->
    <!--android:focusable="false"-->
    <!--android:visibility="gone"-->
    <!--/>-->
    <!--android:layout_toEndOf="@+id/checkbox_operate_data"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/list_item_vertical_line"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:background="#5da6ff"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/stu_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="赵小雪"
                android:textColor="@color/list_item_right"
                android:textSize="20sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_nextpage"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/teach_basics_into" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/left6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_left"
                    android:textSize="17sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/right6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/list_item_right"
                    android:textSize="18sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dash_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/dash_view"
                    android:layerType="software" />
            </LinearLayout>

        </LinearLayout>


        <!--android:layout_below="@+id/list_item_content"-->
        <RelativeLayout
            android:id="@+id/click_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/click_open_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/select_bg_item"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="3dp"
                android:text="查看相关列表"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>


